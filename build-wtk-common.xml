<project name="included" basedir="." default="...">
    <property environment="env"/>
    
    <!-- 
        If something has set wtk.home, check it.  
        Otherwise try environment variable WTK_HOME
     -->
    <condition property="wtk.home" 
        value="${wtk.home}" 
        else="${env.WTK_HOME}">
        
        <resourceexists>
            <file file="${wtk.home}"/>
        </resourceexists>
    </condition>
    
    <!-- Now check; if not fallback to default -->
    <condition property="wtk.home" 
        value="${wtk.home}" 
        else="c:\tools\Nokia\Devices\Nokia_SDK_2_0_Java">
        
        <resourceexists>
            <file file="${wtk.home}"/>
        </resourceexists>
    </condition>

    <echo message="wtk.home Set to ${wtk.home}"/>
</project>

